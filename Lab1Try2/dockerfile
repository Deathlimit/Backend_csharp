FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# �������� csproj �����
COPY ["Lab1Try2/Lab1Try2.csproj", "Lab1Try2/"]
COPY ["Common/Common.csproj", "Common/"]
COPY ["Models/Models.csproj", "Models/"]
#COPY ["Lab1Try2/DAL/DAL.csproj", "Lab1Try2/DAL/"]
COPY ["Migrations/Migrations.csproj", "Migrations/"]

# ��������������� �����������
RUN dotnet restore "Lab1Try2/Lab1Try2.csproj"

# �������� ��� ���������
COPY . .

# ��������� (���� ��� ����������, ����� ������ �������)
WORKDIR "/src/Lab1Try2"
RUN dotnet publish "Lab1Try2.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:9.0
WORKDIR /app
COPY --from=build /app/publish .
# Lab1Try2 - ��� ����������, �� ����� ����� ����� ����� ��� ������������
ENTRYPOINT ["dotnet", "Lab1Try2.dll"]